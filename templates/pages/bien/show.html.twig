{% extends 'base.html.twig' %}

{% block title %}Oti {{ bien.description }} {% endblock %}

{% block body %}
    <div class="shadow-2xl rounded-xl px-3 py-4">
    <div class="lg:flex ">
        <div class="md:w-1/3">
            <div class="p-2 mb-2" id="img_principal">
                <img onclick="display('{{ asset('images/back.jpg') }}')" src="{{ asset('images/back.jpg') }}" alt="image back">
            </div>
            <div class="flex justify-between items-center flex-wrap">
                {% for image in bien.images %}
                    <img onclick="display('{{ asset('uploads/'~image.getName() ) }}')" class="w-40 h-40 "
                         src="{{ asset('uploads/'~image.getName() ) }}"
                         alt="{{ bien.description }}">

                {% endfor %}
            </div>
        </div>
        <div class="md:w-2/3 p-4">
            <h1 class="text-3xl text-center">
                {{ bien.description }}
            </h1>
            <h3 class="text-3xl text-gray-500 text-center mt-4">

                {{ bien.surface }} m²  AVEC {{ bien.nbPieces }} pièces
            </h3>

            <h4 class="text-6xl text-center mt-32 text-gray-700">{{ bien.price| format_currency('EUR' , {fraction_digit: 0}) }}</h4>
        </div>
    </div>
    <div class="px-3 py-2">
        <h4 class="text-2xl text-gray-500 my-3">L'essentiel</h4>
        <div class="grid sm:grid-cols-2 md:grid-cols-4">
            <span class="py-2 ">Voix1</span>
            <span>Voix2</span>
            <span>Voix3</span>
            <span>Voix4</span>
            <span>Voix5</span>
        </div>
    </div>
    <hr class="w-1/2 mx-auto border-2 border-gray-300">
    <div class="px-3 py-2 mt-3">

        <h4 class="text-2xl text-gray-500 my-3">Intérieur</h4>
        <div class="grid sm:grid-cols-2 md:grid-cols-4">
            <span class="py-2 ">Voix1</span>
            <span>Voix2</span>
            <span>Voix3</span>
            <span>Voix4</span>
            <span>Voix5</span>
        </div>
    </div>
    <hr class="w-1/2 mx-auto border-2 border-gray-300">
    <div class="px-3 py-2 mt-3">
        <h4 class="text-2xl text-gray-500 my-3">Exterieur</h4>
        <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-4">
            <span class="py-2 ">Voix1</span>

            <span>Voix2</span>
            <span>Voix3</span>
            <span>Voix4</span>
            <span>Voix5</span>
        </div>
    </div>
    <hr class="w-1/2 mx-auto border-2 border-gray-300">
    <div class="px-3 py-2 mt-3">
        <h4 class="text-2xl text-gray-500 my-3">Autres</h4>
        <div class="grid grid-cols-4">
            <span class="py-2 ">Voix1</span>
            <span>Voix2</span>
            <span>Voix3</span>
            <span>Voix4</span>
            <span>Voix5</span>
        </div>
    </div>
    </div>
    <!-- Main modal -->
    <div onclick="display('')" class="hidden overflow-x-hidden overflow-y-auto fixed inset-0 z-50 outline-none focus:outline-none justify-center items-center"
         id="modal-id">
        <div class="relative m-auto my-6 md:w-1/2">
            <!--content-->
            <div class="border-0 rounded-lg shadow-lg relative flex flex-col w-full bg-white outline-none focus:outline-none">
                <!--header-->
                <div class="flex items-start justify-between p-5 border-b border-solid border-slate-200 rounded-t">
                    <h3 class="text-3xl font-semibold">
                        Zoom sur image
                    </h3>
                    </div>
                <!--body-->
                <div class="relative p-6 flex-auto" >
                    <img src="" alt="maison" id="text_model">
                </div>


            </div>
        </div>
    </div>
    <div class="hidden opacity-25 fixed inset-0 z-40 bg-black" id="modal-id-backdrop"></div>

{% endblock %}

{% block javascripts %}
    <script>
        const myModal = document.getElementById("modal-id")
        const bodyModel = document.getElementById("modal-id-backdrop")
        const textModel = document.getElementById("text_model")

        function display(bg) {
            myModal.classList.toggle("hidden");
            bodyModel.classList.toggle("hidden");
            myModal.classList.toggle("flex");
            bodyModel.classList.toggle("flex");
            textModel.setAttribute('src', `${bg}`)
        }

    </script>

{% endblock %}
