{% extends 'base.html.twig' %}

{% block title %}Agence Oti {{ bien.description }} {% endblock %}

{% block body %}
    <div class="md:flex">
        <div class="md:w-1/3 ">
            <div class="p-2 mb-2" id="img_principal">
                <img src="{{ asset('images/back.jpg') }}" alt="image back">
            </div>
            <div class="flex justify-between items-center">
                {% for image in bien.images %}
                    <img class="w-40 h-40 " src="{{ asset('uploads/'~image.getName() ) }}" alt="{{ bien.description }}">
                {% endfor %}
            </div>
        </div>
        <div class="md:w-2/3 p-4">
            <h1 class="text-3xl text-center">
                {{ bien.description }}
            </h1>
            <h3 class="text-3xl text-gray-500 text-center mt-4">

                {{ bien.surface }} m² pièces AVEC {{ bien.nbPieces }}
            </h3>

            <h4 class="text-6xl text-center mt-32 text-gray-700">250 000 €</h4>
        </div>
    </div>
    <div class="px-3 py-2">
        <h4 class="text-2xl text-gray-500 my-3">L'essentiel</h4>
        <div class="grid grid-cols-4">
            <span class="py-2 ">Voix1</span>
            <span>Voix2</span>
            <span>Voix3</span>
            <span>Voix4</span>
            <span>Voix5</span>
        </div>
    </div>
    <hr class="w-1/2 mx-auto border-2 border-gray-300">
    <div class="px-3 py-2 mt-3">

        <h4 class="text-2xl text-gray-500 my-3">Intérieur</h4>
        <div class="grid grid-cols-4">
